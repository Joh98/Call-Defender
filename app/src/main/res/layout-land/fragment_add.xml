<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aa.calldefender.AddFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/number_card_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.112">

            <RelativeLayout
                android:layout_width="326dp"
                android:layout_height="75dp"
                android:padding="16dp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="89dp">

                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Add Number"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/hash"
                    android:layout_width="40dp"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/number_text"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/hash"
                    tools:layout_editor_absoluteX="114dp"
                    tools:layout_editor_absoluteY="53dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/area_card_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.602">

            <RelativeLayout
                android:layout_width="326dp"
                android:layout_height="75dp"
                android:padding="16dp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/area_code_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Add Area Code"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/map_pin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="26dp"
                    android:layout_toEndOf="@+id/area_code_text"
                    android:src="@drawable/pin"
                    tools:layout_editor_absoluteX="272dp"
                    tools:layout_editor_absoluteY="272dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
